<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--
        <ScrollView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80000000">
-->
            <LinearLayout
                android:id="@+id/ll_dialog_redeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#80000000">



                <LinearLayout
                    android:id="@+id/ll_dRedeem1"
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"

                    android:background="@drawable/receipt_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/spaceXXLarge"
                        android:paddingBottom="@dimen/spaceLarge"
                        android:layout_marginStart="@dimen/spaceXLarge"
                        android:layout_marginEnd="@dimen/spaceXLarge">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_profile"
                            android:layout_width="@dimen/img_size_50"
                            android:layout_height="@dimen/img_size_50"
                            android:src="@drawable/reg_camera"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="@dimen/spaceXXXXXLarge"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/xLargeTextSize"
                            android:layout_marginStart="@dimen/spaceXSmall"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_weight="2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/txt_member"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/available_points"
                                android:textColor="@color/colorLightGrey"
                                android:textSize="@dimen/smallTextSize"
                                android:layout_marginStart="@dimen/spaceXSmall"
                                android:gravity="end"
                                android:layout_weight="2"/>

                            <TextView
                                android:id="@+id/txt_member_no1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="711 pts"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/largeTextSize"
                                android:textStyle="bold"
                                android:gravity="end"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/dRedeem_line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/spaceXXLarge"
                        android:layout_marginStart="@dimen/spaceNormal"
                        android:layout_marginEnd="@dimen/spaceNormal"
                        android:background="@color/colorLightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/spaceXLarge"
                        android:layout_marginEnd="@dimen/spaceXLarge"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/txt_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxWidth="140dp"
                            android:text="Brown Sugar Boba Macha Green Tea"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txt_member_nows1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="- 711 pts"
                            android:maxLines="1"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/largeTextSize"
                            android:textStyle="bold"
                            android:gravity="end|top"
                            android:layout_weight="3"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/dRedeem_line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spaceXXLarge"
                        android:layout_marginStart="@dimen/spaceNormal"
                        android:layout_marginEnd="@dimen/spaceNormal"
                        android:background="@color/colorLightGrey"/>
                </LinearLayout>

            </LinearLayout>
       <!-- </ScrollView>-->
</layout>