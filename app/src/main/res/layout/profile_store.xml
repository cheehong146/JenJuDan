<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceLarge"
            android:layout_marginStart="@dimen/spaceLarge"
            android:layout_marginEnd="@dimen/spaceLarge"
            android:layout_marginBottom="@dimen/spaceXSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_store_back"
                android:layout_width="@dimen/option_back_width"
                android:layout_height="@dimen/option_back_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/option_back" />

            <TextView
                android:id="@+id/txt_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Melbourne Store"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/xxLargeTextSize"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/spaceXSmall"
                android:layout_marginEnd="@dimen/spaceLarge"
                android:inputType="none"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/store_img_height"
                    android:src="@drawable/holderimg_feature_matcha"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_store_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textColor="@color/colorLightBlue"
                        android:textSize="@dimen/xxxLargeTextSize"
                        android:paddingTop="@dimen/spaceLarge"
                        android:paddingBottom="@dimen/spaceLarge"
                        android:inputType="none"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/holderimg_location"
                        android:scaleType="fitXY"/>

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_store_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/open_hours"
                        android:textColor="@color/colorLightBlue"
                        android:textSize="@dimen/xxxLargeTextSize"
                        android:inputType="none"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge" />

                    <LinearLayout
                        android:id="@+id/ll_mon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"/>

                        <TextView
                            android:id="@+id/txt_mon_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="Closed"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tuesday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"/>

                        <TextView
                            android:id="@+id/txt_tue_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="11:00am-9:00pm"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_wed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wednesday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:inputType="none"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txt_wed_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="Closed"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_thur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_thur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/thursday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize" />

                        <TextView
                            android:id="@+id/txt_thur_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="Closed"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_fri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/friday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize" />

                        <TextView
                            android:id="@+id/txt_fri_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="10:00am-8:00pm"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/saturday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize" />

                        <TextView
                            android:id="@+id/txt_sat_hr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00am-9:00pm"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spaceXSmall"
                        android:paddingBottom="@dimen/spaceXSmall"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge">
                        <TextView
                            android:id="@+id/txt_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunday"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize" />

                        <TextView
                            android:id="@+id/txt_sun_hr"
                            android:layout_width="@dimen/hour_width"
                            android:layout_height="wrap_content"
                            android:text="Closed"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normalTextSize"
                            android:layout_marginStart="@dimen/spaceLarge" />

                    </LinearLayout>

                    <View
                        android:id="@+id/home_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/spaceLarge"
                        android:layout_marginEnd="@dimen/spaceLarge"
                        android:layout_marginTop="@dimen/spaceNormal"
                        android:background="@color/colorLightBlue"/>

                    <TextView
                        android:id="@+id/txt_product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We are a self-made brand,starting from a vendor, in the market facing the beverage, we want to maake our own taste and uniqueness.\n\nThe Jane Badan brand is awesome."
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/normalTextSize"
                        android:paddingTop="@dimen/spaceLarge"
                        android:paddingBottom="@dimen/spaceLarge"
                        android:layout_marginStart="@dimen/spaceXLarge"
                        android:layout_marginEnd="@dimen/spaceXLarge"
                        android:inputType="none"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>