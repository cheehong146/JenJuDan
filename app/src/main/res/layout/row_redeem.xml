<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spaceXSmallEven"
        android:layout_marginTop="@dimen/spaceSmall"
        android:layout_marginBottom="@dimen/spaceSmall">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_redeem_height"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_redeem"
            android:layout_width="@dimen/rv_redeem_width"
            android:layout_height="@dimen/rv_redeem_height"
            android:scaleType="fitXY"
            android:src="@drawable/holderimg_feature_matcha" />

        <Button
            android:id="@+id/btn_redeem"
            android:background="@drawable/redeem_btnbackground"
            android:layout_width="@dimen/redeem_width"
            android:layout_height="@dimen/redeem_height"
            android:layout_gravity="right"
            android:text="@string/redeem"
            android:layout_marginTop="@dimen/rv_redeem_btn_marginTop"
            android:layout_marginEnd="@dimen/rv_redeem_btn_marginEnd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smallTextSize"
            android:textAllCaps="false" />

        </LinearLayout>
    </RelativeLayout>
</layout>