<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/order_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/holderimg_feature_matcha"
                    android:maxHeight="400dp"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="@dimen/img_size_25"
                        android:layout_height="@dimen/img_size_25"
                        android:layout_marginEnd="@dimen/spaceNormal"
                        android:src="@drawable/icon_calendar" />
                    <TextView
                        android:id="@+id/txt_order_validDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valid from 23 June 2019 to 8 August 2019"
                        android:textColor="@color/colorLightBlue"
                        android:textSize="@dimen/normalTextSize"
                        android:layout_gravity="bottom"/>
                </LinearLayout>

                <View
                    android:id="@+id/order_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/spaceLarge"
                    android:layout_marginBottom="@dimen/spaceLarge"
                    android:layout_marginEnd="@dimen/spaceLarge"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:background="@color/colorLightBlue"/>

                <TextView
                    android:id="@+id/txt_order_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JENJUDAN SET"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/xxxLargeTextSize"
                    android:paddingBottom="@dimen/spaceLarge"
                    android:inputType="none"
                    android:layout_marginStart="@dimen/spaceXLarge"
                    android:layout_marginEnd="@dimen/spaceXLarge" />

                <TextView
                    android:id="@+id/txt_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUD400.00"
                    android:textSize="@dimen/img_size_50"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_order_buy"
                    android:layout_width="match_parent"
                    android:background="@color/colorLightBlue2"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:layout_marginBottom="@dimen/spaceLarge"
                    android:layout_marginStart="@dimen/spaceXXLarge"
                    android:layout_marginEnd="@dimen/spaceXXLarge"
                    android:layout_height="@dimen/img_size_50"
                    android:text="@string/buy"
                    android:textSize="@dimen/xLargeTextSize"/>

                <TextView
                    android:id="@+id/txt_order_tnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spaceLarge"
                    android:layout_marginStart="@dimen/spaceXXLarge"
                    android:text="@string/terms_and_conditions"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txt_order_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spaceXXLarge"
                    android:text="&#8226;\u0020Ejiasf g waq gwaf egawe hgwefweg. \n&#8226;\u0020Iota aw rawe gawfswrhefawgr4h."
                    android:layout_marginBottom="@dimen/spaceXLarge"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spaceLarge"
            android:layout_marginEnd="@dimen/spaceLarge"
            android:layout_marginTop="@dimen/spaceNormal"
            android:layout_marginBottom="@dimen/spaceLarge"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_order_back"
                android:layout_width="@dimen/option_back_width"
                android:layout_height="@dimen/option_back_height"
                android:src="@drawable/option_back" />
        </LinearLayout>
    </RelativeLayout>
</layout>