<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/img_size_60"
        android:layout_height="@dimen/img_size_60"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/redemption_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp" />

    <LinearLayout
        android:id="@+id/ll_dRedeem1"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/receipt_background"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/img_close">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spaceXLarge"
            android:layout_marginEnd="@dimen/spaceXLarge"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spaceXXLarge"
            android:paddingBottom="@dimen/spaceLarge">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/img_size_50"
                android:layout_height="@dimen/img_size_50"
                android:layout_weight="1"
                android:src="@drawable/reg_camera" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="@dimen/spaceXXXXXLarge"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spaceXSmall"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="User Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/xLargeTextSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spaceXSmall"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="@string/available_points"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/txt_member_no1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="711 pts"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/dRedeem_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spaceNormal"
            android:layout_marginEnd="@dimen/spaceNormal"
            android:layout_marginBottom="@dimen/spaceXXLarge"
            android:background="@color/colorLightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spaceXLarge"
            android:layout_marginEnd="@dimen/spaceXLarge"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_memberw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spaceXSmall"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="sdfsdfsdfsdfsdgfsdfsdfasdfsdgfsdfsfsdf"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/normalTextSize" />

            <TextView
                android:id="@+id/txt_member_nows1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="- 711 pts"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/dRedeem_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spaceNormal"
            android:layout_marginTop="@dimen/spaceXXLarge"
            android:layout_marginEnd="@dimen/spaceNormal"
            android:background="@color/colorLightGrey" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_btn_height"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLightBlue3"
        android:text="@string/proceed"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/normalTextSize"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>