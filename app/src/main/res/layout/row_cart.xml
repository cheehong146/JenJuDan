<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/spaceXLarge"
            android:background="@color/colorLightGrey2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/spaceLarge"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlue"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold"
                android:layout_weight="5"
                android:gravity="end"/>

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spaceSmall"
                android:layout_marginStart="@dimen/spaceSmall"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:gravity="end|top"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold"
                android:layout_weight="4"/>


        </LinearLayout>

    </LinearLayout>
</layout>